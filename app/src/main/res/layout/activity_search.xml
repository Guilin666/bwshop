<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#d43c3c"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/img_back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/browse_back"
            />
        <EditText
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/ed_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="8"
            android:background="@drawable/home_seach"
            android:hint="超级秒杀日" />

        <Button
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/btn_sou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/ed_search"
            android:layout_weight="2"
            android:background="@drawable/home_seach"
            android:text="搜索" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热搜"
        android:textFontWeight="10"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold" />
    <bwie.example.com.bwshop.view.GoodView
        android:id="@+id/good_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"></bwie.example.com.bwshop.view.GoodView>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="历史搜索"
        android:textFontWeight="10"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold" />
    <bwie.example.com.bwshop.view.GoodView
        android:id="@+id/good_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></bwie.example.com.bwshop.view.GoodView>
    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/tv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空历史记录"
        android:padding="@dimen/dp_5"
        android:background="@drawable/bg"
        android:textSize="@dimen/dp_10"
        />
</LinearLayout>